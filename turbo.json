{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", "public/dist/**"],
      "dependsOn": ["^build", "lint"]
    },
    "test:watch": {
      "outputs": [],
      "dependsOn": []
    },
    "test": {
      "outputs": [],
      "dependsOn": []
    },
    "coverage": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": [],
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
